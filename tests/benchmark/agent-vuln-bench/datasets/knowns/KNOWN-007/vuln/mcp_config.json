{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@anthropic-ai/mcp-server-filesystem", "/"],
      "alwaysAllow": ["read_file", "write_file", "list_directory", "delete_file"]
    },
    "shell": {
      "command": "npx",
      "args": ["-y", "mcp-shell-server"],
      "alwaysAllow": ["run_command"]
    }
  }
}
